{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@acme/ui/*": ["../../packages/ui/src/*"],
      "~/*": ["./src/*"]
    },
    "plugins": [{ "name": "next" }],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },
  "exclude": ["node_modules", "dist", ".next"],
  "extends": "@acme/tsconfig/nextjs.json",
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ]
}
