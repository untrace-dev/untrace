{
  "commitlint": {
    "extends": [
      "@acme/commitlint-config"
    ]
  },
  "devDependencies": {
    "@acme/commitlint-config": "workspace:*",
    "@biomejs/biome": "2.1.1",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.5",
    "@commitlint/cli": "19.8.1",
    "@testing-library/react": "16.3.0",
    "@turbo/gen": "2.5.4",
    "@types/bun": "1.2.18",
    "bun": "1.2.18",
    "checkly": "6.0.1",
    "knip": "5.61.3",
    "lefthook": "1.12.0",
    "mintlify": "4.2.7",
    "turbo": "2.5.4",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=20.12.0"
  },
  "name": "@acme/root",
  "packageManager": "bun@1.2.18",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "bump-versions": "changeset version && bun install",
    "clean": "git clean -xdf node_modules",
    "clean:ws": "turbo run clean",
    "db:gen-migration": "turbo -F @acme/db gen-migration",
    "db:migrate": "turbo -F @acme/db migrate",
    "db:push": "turbo -F @acme/db push",
    "db:seed": "turbo -F @acme/db seed",
    "db:studio": "turbo -F @acme/db studio",
    "dev": "turbo watch dev --concurrency 20",
    "dev:next": "turbo watch dev -F @acme/web-app...",
    "docs": "cd docs && mintlify dev",
    "format": "biome check",
    "format:ci": "biome ci",
    "format:fix": "biome check --write",
    "knip": "knip --include files,dependencies",
    "lint:ws": "bunx sherif@latest",
    "postinstall": "bun lint:ws",
    "publish": "turbo run build --filter=./apps/cli... && changeset publish",
    "test": "bun test",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add",
    "with-env": "infisical run --"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "tooling/*"
  ]
}
