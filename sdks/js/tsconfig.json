{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": false,
    "outDir": "dist",
    "paths": {
      "~/*": ["src/*"]
    },
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },
  "exclude": ["node_modules", "dist", "scripts", "bin"],
  "extends": "@acme/tsconfig/react-library.json",
  "include": ["*.ts", "*.tsx", "src"]
}
