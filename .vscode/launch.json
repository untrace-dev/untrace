{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Debug Current Test File",
      "command": "infisical run -- bun test ${relativeFile}",
      "cwd": "${workspaceFolder}",
      "env": {
        "INFISICAL_RUN": "true"
      }
      // "envFile": "${workspaceFolder}/.env",
      // "smartStep": true,
      // "console": "integratedTerminal"
    },
    {
      "name": "Next.js",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun dev",
      "cwd": "${workspaceFolder}/apps/nextjs/",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Run VSCode Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/apps/vscode-extension"
      ],
      "outFiles": ["${workspaceFolder}/apps/vscode-extension/dist/**/*.js"],
      "cwd": "${workspaceFolder}/apps/vscode-extension",
      "preLaunchTask": "prepare-extension"
    }
  ]
}
